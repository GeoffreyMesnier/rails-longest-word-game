

<div class="container">
  <h1> New game </h1>
  <div class="display">
    <ul>
      <% @letters.each do |letter| %>
       <li><%= letter %></li>
      <% end  %>
    </ul>
  </div>

  <div class="form">
    <p> What is the longest world you can find? </p>
    <form action="/score" method="post" >
      <input type="text" name="word">
      <input type="submit" value="play" class="btn btn-primary">
      <input name="letter_grid" type="hidden" value="<%= @letters.join(",") %>" >
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>

